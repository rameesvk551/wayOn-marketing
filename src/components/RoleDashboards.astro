        </div>
        
        <!-- Sales Panel -->
        <div class="role-panel hidden grid gap-8 lg:grid-cols-2 lg:gap-12 items-center" id="role-sales">
          <div class="bg-gray-900 rounded-xl overflow-hidden p-6">
