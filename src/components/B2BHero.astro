---
// B2B Travel Solutions Hero Section
---

<section class="relative pt-24 pb-16 lg:pt-32 lg:pb-24 overflow-hidden" id="b2b-hero">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-blue-100/50 to-indigo-50"></div>
  
  <!-- Subtle Pattern Overlay -->
  <div class="absolute inset-0 opacity-30" style="background-image: radial-gradient(circle at 1px 1px, #cbd5e1 1px, transparent 0); background-size: 32px 32px;"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <!-- Content -->
      <div class="text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-[1.1] mb-6">
          <span class="text-[#1e3a5f]">B2B Travel Solutions</span>
          <span class="text-slate-600"> That Empower Agencies to Scale</span>
        </h1>
        
        <p class="text-lg lg:text-xl text-slate-600 mb-8 leading-relaxed italic">
          Discover the most advanced <span class="text-[#1e3a5f] font-semibold not-italic">B2B travel software</span> to 
          manage agents, maximize margins, and grow your business seamlessly
        </p>
        
        <a href="#demo" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-orange-500 to-yellow-500 text-white rounded-full font-semibold text-lg hover:from-orange-600 hover:to-yellow-600 shadow-lg shadow-orange-500/25 hover:shadow-xl hover:shadow-orange-500/30 hover:-translate-y-0.5 transition-all duration-300">
          Transform Your Travel Business
        </a>
      </div>
      
      <!-- Visual Dashboard -->
      <div class="relative flex justify-center lg:justify-end">
        <!-- Large Circle Background -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] lg:w-[500px] lg:h-[500px] bg-gradient-to-br from-blue-100/80 to-indigo-100/60 rounded-full"></div>
        
        <!-- People Image Placeholder -->
        <div class="relative z-10 w-80 h-64 lg:w-96 lg:h-72 bg-gradient-to-br from-slate-100 to-slate-200 rounded-2xl overflow-hidden shadow-xl">
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-20 h-20 mx-auto text-slate-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-sm text-slate-500">Travel Professionals</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Stat Cards -->
        <!-- Top Card -->
        <div class="absolute -top-4 right-12 lg:right-24 bg-white rounded-xl shadow-lg p-4 z-20 animate-float">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-[#1e3a5f]">342</p>
              <p class="text-xs text-slate-500">Total Bookings</p>
              <p class="text-xs text-green-500">+12% from last month</p>
            </div>
          </div>
        </div>
        
        <!-- Second Card -->
        <div class="absolute top-20 lg:top-16 -right-4 lg:right-0 bg-white rounded-xl shadow-lg p-4 z-20" style="animation: float 6s ease-in-out infinite 1s;">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-2xl font-bold text-[#1e3a5f]">23</p>
              <p class="text-xs text-slate-500">Active Sub-agents</p>
              <p class="text-xs text-green-500">+2 new clients</p>
            </div>
          </div>
        </div>
        
        <!-- Stats Bar Card -->
        <div class="absolute bottom-8 left-4 lg:left-8 bg-white rounded-xl shadow-lg p-4 z-20" style="animation: float 6s ease-in-out infinite 2s;">
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <p class="text-lg font-bold text-[#1e3a5f]">4.9m</p>
              <p class="text-xs text-slate-500">REVENUE</p>
            </div>
            <div>
              <p class="text-lg font-bold text-[#1e3a5f]">+12k</p>
              <p class="text-xs text-slate-500">PROFIT</p>
            </div>
            <div>
              <p class="text-lg font-bold text-[#1e3a5f]">+9,231</p>
              <p class="text-xs text-slate-500">COMMISSION</p>
            </div>
          </div>
          <div class="grid grid-cols-3 gap-4 text-center mt-3 pt-3 border-t border-slate-100">
            <div>
              <p class="text-sm font-semibold text-green-500">+2,149</p>
              <p class="text-xs text-slate-500">MARKET REACH</p>
            </div>
            <div>
              <p class="text-sm font-semibold text-green-500">+59%</p>
              <p class="text-xs text-slate-500">GROWTH</p>
            </div>
            <div>
              <p class="text-sm font-semibold text-[#1e3a5f]">1.9m</p>
              <p class="text-xs text-slate-500">PAYMENT</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Icon Top Right -->
        <div class="absolute -top-8 right-4 w-10 h-10 bg-pink-500 rounded-lg flex items-center justify-center shadow-lg">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        
        <!-- Floating Icon Middle -->
        <div class="absolute top-1/3 right-20 lg:right-32 w-8 h-8 bg-indigo-500 rounded-lg flex items-center justify-center shadow-lg">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>
