---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ChaosProblem from '../components/ChaosProblem.astro';
import PlatformConcept from '../components/PlatformConcept.astro';
import CorePillars from '../components/CorePillars.astro';
import GearManagement from '../components/GearManagement.astro';
import OperationalFlow from '../components/OperationalFlow.astro';
import RoleDashboards from '../components/RoleDashboards.astro';
import ToolReplacement from '../components/ToolReplacement.astro';
import Scalability from '../components/Scalability.astro';
import DemoForm from '../components/DemoForm.astro';
import Footer from '../components/Footer.astro';

const title = 'Wayon - The Operating System for Travel Businesses';
const description = 'One platform to manage your tours, team, leads, gear, and finances. Built for tour operators, trek companies, and adventure businesses who refuse to run their operations on spreadsheets.';
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main>
    <Hero />
    <ChaosProblem />
    <PlatformConcept />
    <CorePillars />
    <GearManagement />
    <OperationalFlow />
    <RoleDashboards />
    <ToolReplacement />
    <Scalability />
    <DemoForm />
  </main>
  
  <Footer />
</BaseLayout>